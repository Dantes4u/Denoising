FROM nvidia/cuda:11.1-cudnn8-devel-ubuntu20.04
SHELL ["/bin/bash", "-c"]
# Add UTF-8 support
RUN apt-get update && \
    apt-get install -y --no-install-recommends locales && \
    locale-gen en_US.UTF-8
ENV TERM=linux DEBIAN_FRONTEND=noninteractive


RUN apt-get update && apt-get install -y --no-install-recommends \
        apt-utils \
        bash \
        build-essential \
        cmake \
        git \
	ssh \
        libboost-all-dev \
        libgflags-dev \
        libgoogle-glog-dev \
        libhdf5-serial-dev \
        libleveldb-dev \
        liblmdb-dev \
        libopenblas-dev \
        libprotobuf-dev \
        libsnappy-dev \
        make \
        protobuf-compiler \
        python3-dev \
        python3-pip \
        python3-setuptools \
        python3-flask \
        python3-tk \
        wget \
        tmux \
        htop \
        vim  \
        unzip \
	ffmpeg \
	feh \
	cifs-utils \
	nano
RUN python3 -m pip install --upgrade pip
RUN pip3 install \
	timm \
	albumentations \
	adamp \
	pandas \
	numpy \
	sklearn \
	progressbar2 \
	opencv-python \
	tqdm \
	pytorch-lightning \
	tensorboard \
	requests \
	matplotlib \
        Pillow \
        PyYAML \
        seaborn \
        cupy-cuda111 \
        colored \
        loguru \
	tabulate\
	cython
RUN pip3 install torch==1.9.0+cu111 torchvision==0.10.0+cu111 -f https://download.pytorch.org/whl/torch_stable.html

RUN mkdir workspace
RUN chown -R 1004:1004 /workspace
WORKDIR /workspace

RUN mkdir /.cache && chown -R 1004:1004 /.cache
RUN mkdir /.cache/torch && chown -R 1004:1004 /.cache/torch
RUN mkdir /.cache/torch/hub && chown -R 1004:1004 /.cache/torch/hub
RUN mkdir /.config && chown -R 1004:1004 /.config
RUN mkdir /.config/matplotlib && chown -R 1004:1004 /.config/matplotlib
RUN mkdir /files && chown -R 1004:1004 /files

RUN rm -rf /var/lib/apt/lists/*
RUN python3 -m pip install git+https://github.com/lessw2020/Ranger21.git

RUN mkdir /.cupy && chown -R 1004:1004 /.cupy
RUN mkdir /.cupy/kernel_cache && chown -R 1004:1004 /.cupy/kernel_cache

RUN pip3 install kornia
RUN pip3 install 'git+https://github.com/cocodataset/cocoapi.git#subdirectory=PythonAPI'
#RUN pip3 install onnx
RUN pip3 install onnxruntime
RUN pip3 install thop
RUN pip3 install lap
RUN pip3 install cython_bbox
RUN pip3 install onnx==1.8.1
RUN pip3 install 'git+https://github.com/rwightman/pytorch-image-models.git'
RUN pip3 install scikit-image
RUN pip3 install librosa
RUN pip3 install soundfile
